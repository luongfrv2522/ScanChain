{
  "openapi": "3.0.1",
  "info": {
    "title": "ScanChain API",
    "version": "v1"
  },
  "paths": {
    "/api/wallet/info": {
      "get": {
        "tags": [
          "Wallet"
        ],
        "operationId": "GetWalletInfoEndpoint",
        "parameters": [
          {
            "name": "Address",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WalletInfo"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WalletInfo": {
        "type": "object",
        "properties": {
          "cursor": {
            "type": "string",
            "nullable": true
          },
          "page": {
            "type": "integer",
            "format": "int32"
          },
          "pageSize": {
            "type": "integer",
            "format": "int32"
          },
          "blockNumber": {
            "type": "integer",
            "format": "int64"
          },
          "result": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WalletToken"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WalletToken": {
        "type": "object",
        "properties": {
          "tokenAddress": {
            "type": "string",
            "nullable": true
          },
          "symbol": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "logo": {
            "type": "string",
            "nullable": true
          },
          "thumbnail": {
            "type": "string",
            "nullable": true
          },
          "decimals": {
            "type": "integer",
            "format": "int32"
          },
          "balance": {
            "type": "string",
            "nullable": true
          },
          "possibleSpam": {
            "type": "boolean"
          },
          "verifiedContract": {
            "type": "boolean"
          },
          "totalSupply": {
            "type": "string",
            "nullable": true
          },
          "totalSupplyFormatted": {
            "type": "string",
            "nullable": true
          },
          "percentageRelativeToTotalSupply": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "securityScore": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "balanceFormatted": {
            "type": "string",
            "nullable": true
          },
          "usdPrice": {
            "type": "number",
            "format": "double"
          },
          "usdPrice24hrPercentChange": {
            "type": "number",
            "format": "double"
          },
          "usdPrice24hrUsdChange": {
            "type": "number",
            "format": "double"
          },
          "usdValue": {
            "type": "number",
            "format": "double"
          },
          "usdValue24hrUsdChange": {
            "type": "number",
            "format": "double"
          },
          "nativeToken": {
            "type": "boolean"
          },
          "portfolioPercentage": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "Enter: Bearer {your token}",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}